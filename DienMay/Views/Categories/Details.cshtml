@model IEnumerable<DienMay.Models.SanPham>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-mb-6 mb-4">
            <div class="card h-100 shadow-lg bg-white rounded" style="border: none;">
                <img class="card-img-top" src="~/HinhAnh/@item.HinhAnh" style="margin: auto; width: 95%; height: auto" alt="" />
                <div class="card-body">
                    <h4 class="card-title">
                        <b href="#">@item.TenSanPham</b>
                    </h4>
                    <a>
                        <b>
                            @item.GiaSanPham ₫
                        </b>
                    </a>
                </div>
                <div class="car-footer">
                    <div class="btn btn-info center-block">
                        @Html.ActionLink("Chi Tiết", "Details", "SanPhams", new { id = item.ID }, null)
                    </div>
                </div>
            </div>
        </div>
    }
</div>

